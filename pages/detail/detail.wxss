.detail{
  width: 100%;
  height: auto;
  padding-bottom: 50px;
  background-color: #f6f6f6;
}
.goods_swiper{
  height: 375px;
}
.goods_swiper swiper-item{
  height: inherit;
}
.goods_img{
  width: 100%;
  height: 375px;
}
.goods_notice{
  /* height: 50px; */
  display: flex;
  align-items: center;
  color: orangered;
  background: url(https://img.alicdn.com/imgextra/i2/2053469401/O1CN01naOp5i2JJi1HhJLYo_!!2053469401.png) no-repeat;
}
.goods_notice image{
  width: 69px;
  height: 17px;
  margin-right: 10px;
}
/* ------------- */
.infomation{
  border-top: 2px solid #eaeaea;
  padding: 5px 10px 12px;
  background-color: #fff;
}
.info_top{
  font-size: 14px;
  color: #888888;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.price_flag,.stock_num{
  color: #f91415;
}
.new_price{
  color: #f91415;
  font-size: 25px;
  font-weight: bold;
}
.old_price{
  text-decoration: line-through;
}
.info_mid{
  margin: 10px 0 20px;
  display: flex;
  align-items: center;
}
.info_mid image{
  width: 23px;
  height: 13px;
  margin-right: 5px;
}
.info_bottom{
  width: auto;
  height: 65px;
  line-height: 65px;
  padding: 0 10px;
  margin: 0 auto;
  display: flex;
}
.ticket_left{
  width: 69%;
  background-color: #ffeaec;
  border-radius: 10px;
  display: flex;
  padding-left: 10px;
}
.ticket_right{
  width: 30%;
  height: 100%;
  background-color: #ffeaec;
  border-radius: 10px;
  text-align: center;
  font-size: 15px;
  color: #f91415;
}
.ticket_rules{
  height: 50%;
  line-height: 16px;
  margin-left: 20px;          
  margin-top: 20px;
  font-size: 14px;
  color: #f91415;
}
.comment{
  width: 100%;
  height: 126px;
  margin-bottom: 10px;
  background-color: #ece46e;
}
.brand{
  width: 100%;
  height: 72px;
  background-color: #f14242;
  margin-bottom: 10px;
}
.dropMenu{
  margin-bottom: 10px;
}
.recommend_title{
  width: 100%;
  height: 20px;
  text-align: center;
  padding: 6px 0 12px;
}