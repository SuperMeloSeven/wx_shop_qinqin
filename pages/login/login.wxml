<view class="login">
  <van-cell-group>
    <van-field value="{{ username }}" required clearable auto-focus value="{{form.phone}}" label="手机号码"
      icon="question-o" size="large" placeholder="请输入手机号码" maxlength="11" bind:click-icon="onClickIcon" />
    <van-field value="{{ password }}" type="password" label="密码" size="large" value="{{form.password}}"
      placeholder="请输入密码" required maxlength="16" border="{{ false }}" />
  </van-cell-group>
  <view class="login_btn">
    <van-button type="default" size="large" round wx:if="{{!btn}}">
      登陆
    </van-button>
    <van-button color="linear-gradient(to right, #fa51b9, #fba85a)" size="large" round wx:else>
      登陆
    </van-button>
  </view>
  <view class="cue">
    <text>还没有账号？立即</text>
    <navigator class="goReg" url="{{'/pages/detail/detail'}}">注册</navigator>
  </view>
  <view class="footer">
    <navigator>验证码登陆</navigator>
    <navigator class="mg_10">找回密码</navigator>
  </view>
</view>