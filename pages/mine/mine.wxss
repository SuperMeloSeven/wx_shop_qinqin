.mine{
  width: 100%;
  height: 650px;
  background-color: #f6f6f6;
}
.mine_container{
  background: url(https://cmsstatic.ffquan.cn/wap_new/user/images/user_bg.png?v=2021-01-28) no-repeat #f6f6f6;
  background-size: 100% 195px;
}
.user_info{
  height: 66px;
  /* background: linear-gradient(to right,#ff1f4b,#fe3b35); */
  padding-top: 16px;
  padding-left: 15px;
  display: flex;
  justify-content: space-between;
}
.user_info_name{
  display: flex;
  align-items: center;
}
.user_info_name image{
  width: 66px;
  height: 66px;
}
.user_login{
  margin-left: 10px;
  color: #fff;
  font-size: 18px;
}
.setting{
  width: 25px;
  height: 25px;
  margin-right: 10px;
}
.user_main{
  height: 230px;
  margin: 24px auto;
  padding: 0 10px;
}
.user_me{
  width: 100%;
  height: 93px;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mine_fun{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  color: #7c7c7c;
}
.mine_fun image{
  width: 34px;
  height: 34px;
}
.user_tools{
  width: 100%;
  height: 128px;
  background-color: #fff;
  border-radius: 10px;
}
.tools_title{
  padding-left: 15px;
  line-height: 34px;
  border-bottom: 1px solid #e5e5e5;
}
.tools_content{
  height: 67px;
  padding: 13px 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tools_list{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #7c7c7c;
  font-size: 14px;
}
.tools_list image{
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}